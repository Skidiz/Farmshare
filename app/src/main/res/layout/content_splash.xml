<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Splash"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/splash"
    tools:showIn="@layout/activity_splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <EditText
            android:id="@+id/loginEmailEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="@dimen/edit_text_paddin"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/fadeWhite"
            android:hint="Enter your email"
            android:textColor="@color/colorWhite"
            android:background="@drawable/loginedittextshape"/>



        <EditText
            android:id="@+id/loginPasswordEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="@dimen/edit_text_paddin"
            android:inputType="textPassword"
            android:textColorHint="@color/fadeWhite"
            android:hint="Enter your email"
            android:textColor="@color/colorWhite"
            android:background="@drawable/loginedittextshape"/>




        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/loginUpBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="LOG IN"
            android:textColor="@color/textColor"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/signUpTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register?"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/colums"
                android:layout_weight="1"
                android:textColor="@color/textBoxColor"
                />

            <TextView
                android:id="@+id/lostPassTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lost Password?"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>





    </LinearLayout>











</LinearLayout>