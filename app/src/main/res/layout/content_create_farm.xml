<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateFarm"
    tools:showIn="@layout/activity_create_farm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/fs" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:padding="10dp"
            android:src="@drawable/homeblack" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/backBtn"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_rew" />

        <Button
            android:id="@+id/headerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Farm"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:textColor="@color/colorPrimary"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineColor" />



    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="140dp"
        android:layout_gravity="center"
        android:layout_height="120dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="@color/textesColor" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARM NAME" />

        <EditText
            android:id="@+id/farmNameEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="@dimen/edit_text_paddin"
            android:inputType="textPersonName"
            android:background="@color/textBoxColor"/>

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION" />

        <EditText
            android:id="@+id/locationEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="@dimen/edit_text_paddin"
            android:inputType="textPersonName"
            android:background="@color/textBoxColor"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="STATE" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="PRODUCT TYPE" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/stateEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:padding="@dimen/edit_text_paddin"
                android:inputType="textPersonName"
                android:background="@color/textBoxColor"/>



            <EditText
                android:id="@+id/productTypeEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="@dimen/edit_text_paddin"
                android:inputType="textPersonName"
                android:background="@color/textBoxColor"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SIZE" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="HAVEST DATE" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/farmSizeEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:padding="@dimen/edit_text_paddin"
                android:inputType="textPersonName"
                android:background="@color/textBoxColor"/>



            <EditText
                android:id="@+id/hdEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="@dimen/edit_text_paddin"
                android:inputType="textPersonName"
                android:background="@color/textBoxColor"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="YIELD DATE" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="GESTION PERIOD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/productCycleEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:padding="@dimen/edit_text_paddin"
                android:inputType="textPersonName"
                android:background="@color/textBoxColor"/>



            <EditText
                android:id="@+id/durationEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="@dimen/edit_text_paddin"
                android:inputType="textPersonName"
                android:background="@color/textBoxColor"/>

        </LinearLayout>

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARMER NAME" />

        <EditText
            android:id="@+id/farmerNameEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="@dimen/edit_text_paddin"
            android:inputType="textPersonName"
            android:background="@color/textBoxColor"/>


        <Button
            android:layout_marginTop="11dp"
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="SUBMIT"
            android:textColor="@color/textColor"
            android:background="@color/colorPrimary"/>




        </LinearLayout>




</LinearLayout>