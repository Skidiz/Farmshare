<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blueWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Merchant"
    tools:showIn="@layout/activity_merchant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/fs" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:padding="10dp"
            android:src="@drawable/homeblack" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Merchant"
            android:textColor="@color/textesColor"
            android:textSize="20sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:columnCount="2"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/createbid"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Create Bids"
                    android:textColor="@color/blueWhite"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/managebids"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Manage Bids"
                    android:textColor="@color/blueWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/searchbids"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Search Bids"
                    android:textColor="@color/blueWhite"/>

            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>

</LinearLayout>