<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Agent"
    android:background="@color/colorPrimary"
    tools:showIn="@layout/activity_agent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/fs" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:padding="10dp"
            android:src="@drawable/homeblack" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agent"
            android:textColor="@color/textesColor"
            android:textSize="20sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:columnCount="2"
            android:padding="10dp">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/page_button_size"
             android:background="@color/colorWhite"
             android:layout_weight="1"
             android:gravity="center"
             android:padding="@dimen/page_button_padding"
             android:textAlignment="center"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="@dimen/image_width"
                 android:layout_height="@dimen/image_width"
                 android:tint="@color/colorPrimary"
                 android:src="@drawable/portfolio2"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAlignment="center"
                 android:text="My Portfolio"
                 android:textColor="@color/colorPrimary"/>

         </LinearLayout>

            <LinearLayout
                android:id="@+id/craetefarmBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/createfarm"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Farm"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/equipment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Source For Equipment"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toplayout"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:columnCount="2"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/investorwhite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="My Investors"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:src="@drawable/portfolio"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Farmers"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_button_size"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/page_button_padding"
                android:textAlignment="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/merchantwhite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="My Merchants"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>
</LinearLayout>